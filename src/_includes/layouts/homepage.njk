    <section class="site-testimonial">
      <div class="container">
        <div class="row">
          {# <div class="col-12">
            <div class="section-title">
              <h2>
                {{testimonials.title}}
              </h2>
              <p>
                {{testimonials.des}} 
              </p>
            </div>
          </div> #}
          {% for opinion in testimonials.opinion %}
          <div class="col-lg-4 col-md-6">
            <div class="site-testimonial-item">
              <div class="site-testimonial-item-header">
                <div class="thumb">
                  <i class="fa {{opinion.icon}}"></i>
                </div>
                <div class="person">
                  {# <h5>{{opinion.name}}</h5> #}
                  <a href="{{opinion.url}}" class="btn btn-secondary scroll-to">{{opinion.dig}}</a>
                </div>
              </div>
              <p class="site-testimonial-item-body">
                {{opinion.comment | safe}}
              </p>
            </div>
          </div> 
